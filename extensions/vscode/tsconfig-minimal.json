{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/extension-standalone.ts",
    "src/kiro/standalone/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "**/*.test.ts",
    "**/*.vitest.ts"
  ]
}
